---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import vermicelliImage from '../assets/recipes/Vermicelli-Noodle-Bowl.webp';
import smoothieImage from '../assets/recipes/Mixed Berries and Banana Smoothie.webp';
import chickenImage from '../assets/recipes/air-fryer-chicken-broccoli.webp';
import farroImage from '../assets/recipes/Farro-White-Bean-Salad.webp';
---

<Layout title="Health Body Balance - Recipes">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Health Body Balance Recipes</h1>
    <p class="text-xl text-gray-600">Discover our collection of healthy and delicious recipes</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
    <a href="/recipes/vermicelli-bowl" class="group h-full">
      <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 group-hover:scale-105 h-full flex flex-col">
        <div class="aspect-[4/3] overflow-hidden">
          <Image
            src={vermicelliImage}
            alt="Vermicelli Noodle Bowl with Grilled Shrimp"
            class="w-full h-full object-cover"
            width={800}
            height={600}
          />
        </div>
        <div class="p-6 flex-grow">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Vermicelli Noodle Bowl with Grilled Shrimp</h3>
          <p class="text-gray-600">A vibrant and refreshing dish that combines fresh ingredients with bold flavors!</p>
        </div>
      </div>
    </a>

    <a href="/recipes/berry-smoothie" class="group h-full">
      <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 group-hover:scale-105 h-full flex flex-col">
        <div class="aspect-[4/3] overflow-hidden">
          <Image
            src={smoothieImage}
            alt="Mixed Berries and Banana Smoothie"
            class="w-full h-full object-cover"
            width={800}
            height={600}
          />
        </div>
        <div class="p-6 flex-grow">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Mixed Berries and Banana Smoothie</h3>
          <p class="text-gray-600">A refreshing and versatile treat that's perfect for breakfast or a snack!</p>
        </div>
      </div>
    </a>

    <a href="/recipes/air-fryer-chicken" class="group h-full">
      <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 group-hover:scale-105 h-full flex flex-col">
        <div class="aspect-[4/3] overflow-hidden">
          <Image
            src={chickenImage}
            alt="Healthy Air Fryer Parmesan Chicken with Broccoli"
            class="w-full h-full object-cover"
            width={800}
            height={600}
          />
        </div>
        <div class="p-6 flex-grow">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Healthy Air Fryer Parmesan Chicken with Broccoli</h3>
          <p class="text-gray-600">A crispy and wholesome dish that's ready in just 30 minutes!</p>
        </div>
      </div>
    </a>

    <a href="/recipes/farro-salad" class="group h-full">
      <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 group-hover:scale-105 h-full flex flex-col">
        <div class="aspect-[4/3] overflow-hidden">
          <Image
            src={farroImage}
            alt="Anti-Inflammatory Farro & White Bean Salad"
            class="w-full h-full object-cover"
            width={800}
            height={600}
          />
        </div>
        <div class="p-6 flex-grow">
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Anti-Inflammatory Farro & White Bean Salad</h3>
          <p class="text-gray-600">A vibrant and nutrient-packed dish designed to fuel the body and fight inflammation!</p>
        </div>
      </div>
    </a>
  </div>

  <div class="text-center mt-12">
    <a
      href="https://www.facebook.com/profile.php?id=61574484063822"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
    >
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
        <path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z"/>
      </svg>
      Follow Us on Facebook
    </a>
  </div>
</Layout> 